.column_chart_container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  margin-top: 20rpx;
  border-radius: 8rpx;
}

.column_chart_title_container {
  width: 100%;
  line-height: 80rpx;
  border-bottom: 2rpx solid #ccc;
}

.column_chart_title_type, .column_chart_title_unit {
  line-height: 80rpx;
  float: left;
}

.column_chart_title_type {
  font-size: 32rpx;
  text-align: left;
  color: #333;
  font-weight: 700;
  padding-left: 30rpx;
  width: calc(50% - 20rpx);
}

.column_chart_title_type::before {
  content: ' ';
  display: inline-block;
  width: 5rpx;
  height: 40rpx;
  margin-right: 20rpx;
  background-color: #0094da;
  position: relative;
  top: 8rpx;
}

.column_chart_title_unit {
  font-size: 24rpx;
  text-align: right;
  color: #0094da;
  padding-right: 30rpx;
  width: calc(50% - 40rpx);
}

.lv_canvas {
  padding-left: 20rpx;
}
